<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]. KPCore5</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />   
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    </environment>
</head>
<body>

    <header>
        <nav id="custom-navbar">
            <div id="nav-container">
                <a href="/" id="navbar-brand">KPCore5</a>
                <div id="nav-items">
                    <a href="/" class="nav-item">Home</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-item" href="/Account/Profile">Hey, @User.Claims.FirstOrDefault(c => c.Type == "full_name")?.Value.Split(' ')[0]!</a>
                        <a href="/Account/Logout" id="qsLogoutBtn" class="nav-item">Logout</a>
                    }
                    else
                    {
                        <a href="/Account/Login" id="qsLoginBtn" class="nav-item">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>


    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2023 - Raccoon-Hero 🦝</p>
        </footer>
    </div>

