            <div class="hacker-input-group">
                <label>Input file path:</label>
                <input type="text" name="input_file" class="hacker-input"/>
            </div>

            <div class="hacker-input-group">
                <label>Output file path:</label>
                <input type="text" name="output_file" class="hacker-input"/>
            </div>

            <input type='submit' value='Execute' class="hacker-submit-button"/>
        </form>

    </div>
</div>